doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Gulfie's Shop!
        link(rel="stylesheet" href="./style.css")
    body 
        main
            h1.title Gulfie's Shop!
            h2.subtitle I have stuff in a few stores, this is the best place to see <i>everything</i> I have available
            .products
                each p in products
                    a.item(href=p.url)
                        h2.item-title #{p.title.trim()}
                        div.centered.bordered-top.rel
                            img(src=p.localImageUrl)
                            //- div
                                span buy now on #{p.site}
                            if p.price && p.price.indexOf('varies') == -1
                                div.price= p.price.trim()
                            if p.site 
                                div.sitecontain
                                    div.site Buy it on #{p.site.trim()}
                            // 'view on RedBubble' hover tip
                        if p.items.length > 0
                            p.description
                                i Available on #{p.items.length} products

                        if p.description
                            div
                                p.description= p.description.trim()
